<div class="header">
  <div class="left-section">
    <%= link_to 'Share Movie', root_path, class: 'heading-title' %>
  </div>
  <div class="right-section">
    <% if @user.present? %>
      <%= form_for @user do |f|%>
        <%= f.text_field :username, placeholder: 'username' %>
        <%= f.password_field :password, placeholder: 'password' %>
        <%= f.submit 'Login / Register' %>
      <%end%>
    <% elsif logged_in? %>
      <span class='username'>Welcome <%= current_user.username %></span>
      <%= link_to 'Share a movie', new_movie_path, class: 'button'  %>
      <%= link_to 'Logout', logout_path, method: :delete, class: 'logout-button' %>
    <% end %>
  </div>
</div>
